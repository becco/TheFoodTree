            </RelativeLayout>
            
            <RelativeLayout
            	android:layout_width="fill_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="0.125"
            	android:gravity="center" >

				<com.fwa.thefoodtree.ui.FTAlphabetButton
						android:id="@+id/tuv"
						android:layout_width="95dp"
						android:layout_height="40dp"
						foodtree:alphabetButtonText="@string/t_u_v" />

            </RelativeLayout>
            
            <RelativeLayout
            	android:layout_width="fill_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="0.125"
            	android:gravity="center" >

				<com.fwa.thefoodtree.ui.FTAlphabetButton
						android:id="@+id/wxyz"
						android:layout_width="95dp"
						android:layout_height="40dp"
						foodtree:alphabetButtonText="@string/w_x_y_z" />

            </RelativeLayout>

        </LinearLayout>

</RelativeLayout>

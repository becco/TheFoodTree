<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foodtree="http://schemas.android.com/apk/res/com.fwa.thefoodtree"
	android:id="@+id/categoryButtons"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/LightGrey4"
	android:paddingBottom="15dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingTop="15dp" >

    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/LightGrey4"
    	android:orientation="vertical" >

        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="16dp"
        	android:background="@color/ClearColor"
        	android:baselineAligned="false" >

            <RelativeLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.33"
            	android:gravity="center" >

					<com.fwa.thefoodtree.ui.FTCategoryButton
						android:id="@+id/categoryFruitAndVeg"
						android:layout_width="90dp"
						android:layout_height="90dp"
						foodtree:buttonIcon="@drawable/category_placeholder"
						foodtree:buttonText="@string/fruit_and_veg_title" />

				</RelativeLayout>

            <RelativeLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_weight="0.33"
            	android:gravity="center" >

					<com.fwa.thefoodtree.ui.FTCategoryButton
						android:id="@+id/categoryDairy"
						android:layout_width="90dp"
						android:layout_height="90dp"
						foodtree:buttonIcon="@drawable/category_placeholder"
						foodtree:buttonText="@string/dairy_title" />

            </RelativeLayout>

            <RelativeLayout
            	android:layout_width="fill_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="0.33"
            	android:gravity="center" >

				<com.fwa.thefoodtree.ui.FTCategoryButton
						android:id="@+id/categoryMeat"
						android:layout_width="90dp"
						android:layout_height="90dp"
						foodtree:buttonIcon="@drawable/category_placeholder"
						foodtree:buttonText="@string/meat_title" />

            </RelativeLayout>

        </LinearLayout>

        

    </LinearLayout>

</RelativeLayout>
